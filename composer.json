{
    "name": "nostriphant/nip-19",
    "description": "Nostr NIP-19 bech32-encoded entities in PHP",
    "type": "library",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^2.35"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "nostriphant\\NIP19\\": "src/",
            "nostriphant\\NIP19Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Rik Meijer",
            "email": "rik@nostriphant.dev"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest"
        ]
    }
}
